{% macro osName(osName) -%}
{%- if osName == "tdesktop" -%}
Telegram Desktop
{%- elif osName == "android" -%}
Telegram for Android
{%- elif osName == "ios" -%}
Telegram for iOS
{%- elif osName == "tdlib" -%}
TDLib
{%- endif -%}
{%- endmacro %}

{% macro osVersion(osName, versionName, buildNumber) -%}
{%- if osName == "tdesktop" || osName == "tdlib" -%}
{{versionName}}
{%- elif osName == "android" || osName == "ios" -%}
{{versionName}} ({{buildNumber}})
{%- endif -%}
{%- endmacro %}
